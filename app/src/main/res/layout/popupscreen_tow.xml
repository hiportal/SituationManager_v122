<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:weightSum="100"
    android:background="@drawable/pop_photo_bg"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="100"
                android:text="접보지사선택"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:autoLink="web"
                />
        </LinearLayout>


    </LinearLayout>
    <ListView 
        android:id="@+id/towPopListView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="51"
        android:layout_margin="15dp"
        />
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:layout_margin="15dp"
        android:text="접보지사 추가를 원할경우\n해당지사에 요청하시기 바랍니다."
        android:textColor="#000000"
        />

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="100"
        >
	   <!-- <ImageView
	       android:id="@+id/btnSave"
	       android:layout_width="0dp"
	       android:layout_height="fill_parent"
	       android:layout_weight="35"
	       android:layout_margin="2dp"
	       android:background="@drawable/item_btn_jisa_save"
	       />
	   <ImageView
	       android:id="@+id/btnClose"
	       android:layout_width="0dp"
	       android:layout_height="fill_parent"
	       android:layout_weight="35"
	       android:layout_margin="2dp"
	       android:background="@drawable/item_close"
	       /> -->
       <ImageView
	       android:id="@+id/btnSave"
	       android:layout_width="0dp"
	       android:layout_height="fill_parent"
	       android:layout_weight="30"
	       android:layout_margin="2dp"
	       android:background="@drawable/item_save"
	       />
	   <ImageView
	       android:id="@+id/btnClose"
	       android:layout_width="0dp"
	       android:layout_height="fill_parent"
	       android:layout_weight="30"
	       android:layout_margin="2dp"
	       android:background="@drawable/item_exit"
	       />
    </LinearLayout>
        


    </LinearLayout>
