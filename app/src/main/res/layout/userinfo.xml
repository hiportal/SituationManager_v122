<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:weightSum="100"
    android:background="@drawable/pop_photo_bg"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="100"
            android:weightSum="100"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:textSize="20sp"
                android:autoLink="web"
                android:background="@drawable/tit_pop_head_my_info"
                android:layout_margin="4.5dp"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="62"
        android:padding="10dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:weightSum="100"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:text="내 정보"
            />
        <TextView
            android:id="@+id/txtUser1" 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:text=""
            />
        <TextView 
            android:id="@+id/txtUser2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:text=""
            />
        <TextView 
            android:id="@+id/txtUser3"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:text=""
            />
        <TextView 
            android:id="@+id/txtUser4"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textColor="#000000"
            android:text=""
            />
        
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="100"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="26"
            android:weightSum="100"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/btnOk"
                android:layout_width="fill_parent" 
                android:layout_height="0dp"
                android:layout_weight="70"
                android:layout_gravity="top|center"
                android:background="@drawable/item_ok"
                />
        </LinearLayout>


    </LinearLayout>    


</LinearLayout>
