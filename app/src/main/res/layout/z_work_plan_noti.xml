<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="175dp"
    android:background="@color/contentsBackground"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="130dp"></LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="5dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="120dp">

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="공사 구간내 광케이블 단선 사고 예방을 위해 감독 또는 통신 담당자에게 광케이블 선로탐지 요청 후 시공"
                    android:textSize="11pt"></TextView>-->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gongsa_notice"
                    ></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="5dp">
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="130dp"
            ></LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@color/contentsBackground"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="270dp"
            android:layout_height="45dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/gongsa_workplan_insert"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/correctBtn"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="270dp"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_ok"/>

                <TextView
                    android:layout_width="60sp"
                    android:layout_height="45dp"
                    android:text="다음"
                    android:fontFamily="@font/notokrm"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="@color/item_ing"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>