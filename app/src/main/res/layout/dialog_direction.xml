<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:orientation="vertical" 
    android:weightSum="100"
    >
    <LinearLayout android:background="#0971ce"  android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="25" android:weightSum="100" android:orientation="horizontal" android:gravity="center" >
		<LinearLayout
			 android:layout_width="0dp"
			 android:layout_height="fill_parent"
			 android:layout_weight="50"
			 android:gravity="center"
			 android:weightSum="100"
			 android:orientation="vertical"
			 >
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:layout_weight="70"
				android:text="출동방향선택"
				android:textColor="#000000"
				android:gravity="center"
				/>
		</LinearLayout>
	</LinearLayout>
	
   <LinearLayout android:background="#ffffff"  android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="25" android:weightSum="100" android:orientation="horizontal" android:gravity="center" >
	    <!-- 본부 -->
	    <LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="80"
			android:gravity="center"
			android:weightSum="100"
			android:orientation="vertical"
			>
			<LinearLayout
				 android:layout_width="fill_parent"
				 android:layout_height="0dp"
				 android:layout_weight="80"
				 android:gravity="center"
				 android:weightSum="100"
				 android:orientation="horizontal"
				 >
				<CheckBox 
				    android:id="@+id/chk_directionS"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="20"
				    android:gravity="center"
				    android:textColor="#000000"
				    />
				<LinearLayout
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="65"
				    android:gravity="center"
				    android:orientation="horizontal"
				    >
				     <TextView 
					    android:id="@+id/txt_directionS"
					    android:layout_width="0dp"
					    android:layout_height="fill_parent"
					    android:layout_weight="50"
					    android:text="방향"
					    android:gravity="center"
					    android:textColor="#000000"
					    />
				</LinearLayout>
			   
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

   <LinearLayout android:background="#ffffff"  android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="25" android:weightSum="100" android:orientation="horizontal" android:gravity="center" >
	    <!-- 지사 -->
	    <LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="80"
			android:gravity="center"
			android:weightSum="100"
			android:orientation="vertical"
			>
			<LinearLayout
				 android:layout_width="fill_parent"
				 android:layout_height="0dp"
				 android:layout_weight="80"
				 android:gravity="center"
				 android:weightSum="100"
				 android:orientation="horizontal"
				 >
				<CheckBox 
				    android:id="@+id/chk_directionE"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="20"
				    android:gravity="center"
				    />
			     <LinearLayout
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="65"
				    android:gravity="center"
				    android:orientation="horizontal"
				    >
				     <TextView 
				        android:id="@+id/txt_directionE"
					    android:layout_width="0dp"
					    android:layout_height="fill_parent"
					    android:layout_weight="50"
					    android:gravity="center"
					    android:textColor="#000000"
					    android:text="방향"
					    />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
   <LinearLayout android:background="#ffffff"  android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="25" android:weightSum="100" android:orientation="horizontal" android:gravity="center" >
	    <LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="80"
			android:gravity="center"
			android:weightSum="100"
			android:orientation="vertical"
			>
			<LinearLayout
				 android:layout_width="fill_parent"
				 android:layout_height="0dp"
				 android:layout_weight="50"
				 android:gravity="center"
				 android:weightSum="100"
				 android:orientation="horizontal"
				 >
			    <ImageView 
			        android:id="@+id/btn_confirm"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="36"
				    android:background="@drawable/item_ok"
				    android:textAlignment="center"
				    />
			     <ImageView 
			        android:id="@+id/btn_cancel"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight="36"
				    android:background="@drawable/item_cancel"
				    android:textAlignment="center"
				    android:layout_marginLeft="1dp"
				    />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	
</LinearLayout>
