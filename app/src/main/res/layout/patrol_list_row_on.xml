<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/item_selector_patrol_on"
	android:gravity="center">
				
	<LinearLayout
	    android:id="@+id/rowPatrolLayout"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="left|center"
		android:orientation="horizontal"
		android:weightSum="100"
		>
		<TextView
		    android:id="@+id/row_patrol_no"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="10"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/row_patrol_time"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="20"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/row_patrol_type"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="20"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/row_patrol_content"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="40"
		    android:text="1"
		    android:gravity="center"
		    android:singleLine="true"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/row_patrol_startcnt"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="10"
		    android:text="1"
		    android:gravity="center"
		    android:singleLine="true"
		    android:textColor="#000000"
		    />
	</LinearLayout>
</LinearLayout>