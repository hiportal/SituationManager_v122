<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/contentsBackground"
    android:weightSum="150"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="120"
        android:weightSum="10"
        android:orientation="vertical"
        >

        <TextView
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:fontFamily="@font/notokrd"

            android:text="본 작업은 웹에서 입력된 작업입니다\n\n몇몇 항목은 공란으로 표출이 될 수 있음을 알려드립니다."
            android:textSize="20sp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/userCheckTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:weightSum="100"

        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/gongsa_workplan_insert">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ok"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="20sp"
            android:textColor="@color/item_ing"/>
    </LinearLayout>
</LinearLayout>