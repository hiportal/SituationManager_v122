<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:background="#FDCA49"
	android:id="@+id/rowTowLayouthome"	
	>
				
	<LinearLayout
	    android:id="@+id/rowTowLayout"
		android:layout_width="fill_parent"
		android:layout_height="40dp"
		android:gravity="left|center"
		android:orientation="horizontal"
		android:weightSum="100"
		android:background="@drawable/item_selector_patrol"	
		>
		<TextView
		    android:id="@+id/rowTowJisa"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="12"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    android:singleLine="true"
		    />
		<TextView
		    android:id="@+id/rowTowTime"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="16"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/rowTowType"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="16"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
		<TextView
		    android:id="@+id/rowTowContent"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="38"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    android:singleLine="true"
		    />
		<TextView
		    android:id="@+id/rowTowStat"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="18"
		    android:text="1"
		    android:gravity="center"
		    android:textColor="#000000"
		    />
	</LinearLayout>
</LinearLayout>