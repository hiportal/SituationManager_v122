<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:background="@color/contentsBackground"
    android:weightSum="180"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="150"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/userName"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="이름 : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userPhneNo"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="전화번호 : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userBonbu"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="소속 본부 : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userJisa"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="소속 지사 : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userCompany"
            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="소속 시공사 : "
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/clickOk"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center_horizontal|center_vertical"
        android:background="@drawable/gongsa_workplan_insert">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_ok"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="20sp"
            android:textColor="@color/item_ing"/>
    </LinearLayout>
</LinearLayout>