<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="180dp"
    android:background="@color/contentsBackground"
    android:weightSum="180"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150"
        android:weightSum="150"
        android:orientation="vertical"
        >
        <TextView

            android:gravity="center_horizontal|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="추가되는 사용자의 정보를 확인해주세요"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userName"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="이름 : "
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/userPhneNo"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="전화번호 : "
            android:textSize="20sp"/>
        <TextView

            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:fontFamily="@font/notokrd"
            android:textColor="@color/item_ing"
            android:text="가 맞습니까? "
            android:textSize="20sp"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/click_user_identify"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:weightSum="100"
       >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/gongsa_workplan_insert"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ok"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="20sp"
                android:textColor="@color/item_ing"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/click_user_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/gongsa_workplan_register_chogiwhabtn"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ok"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정"
                android:textSize="20sp"
                android:textColor="@color/item_ing"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>